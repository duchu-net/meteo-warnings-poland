root = true

# general
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
quote_type = single
insert_final_newline = true
max_line_length = 100
tab_width = 2
curly_bracket_next_line = false

# python
[*.{py}]
indent_style = space
indent_size = 4

# Web
[*.{js,html,css,json}]
indent_style = space
indent_size = 2

# YAML
[*.{yaml,yml}]
indent_style = space
indent_size = 2